<!doctype html>
<html lang="en">
  <head>
    <title>Media CDN - An Innovative CDN</title>
    <% include 'partials/meta.ect' %>
    <% include 'partials/og.ect' %>
    <% include 'partials/favicon.ect' %>
    <% include 'partials/inline-css.ect' %>
    <% if @__asset('posts.css') :%>
      <link rel="stylesheet" href="<%= @__asset('posts.css') %>">
    <% end %>
    <% include 'partials/ga.ect' %>
  </head>
  <body>
    <% include 'partials/header', { fixed: true } %>
    <main class="post-list">
      <div class="container">
        <% for post in @posts :%>
          <div class="post">
            <div class="post-meta">
              <span class="post-published-time">15-10-2018</span>
              <% for tag in post.tags :%>
                <a class="post-tag" href="/posts/<%= tag.slug %>"><%= tag.name %></a>
              <% end %>
            </div>
            <h2 class="post-title alt-font">
              <a href="/p/<%= post.slug %>"><%= post.title %></a>
            </h2>
            <p class="post-excerpt">
              <%- post.excerpt %>
            </p>
          </div>
        <% end %>
      </div>
    </main>
    <% include 'partials/footer' %>
    <script>
    <!--
      window.DATA_POSTS = <%- JSON.stringify(@posts) %>;
    -->
    </script>
    <script src="<%= @__asset('posts.js') %>"></script>
  </body>
</html>
