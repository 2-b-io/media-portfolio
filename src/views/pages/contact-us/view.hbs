{{#> layouts/default}}
  {{#*inline "content-body"}}
    <div class="container header-wraper">
      <div class="container-center">
        {{> partials/header.hbs}}
      </div>
    </div>

    <div class="container body-wraper">
      <div class="container-center">
        <h1 class="body-wraper-title body-wraper-title-size">{{labels.body_text.title}}</h1>
        <p class="container-center-label">{{labels.body_text.label1}} <a href="" target="_blank" class="body-wraper-title">{{labels.body_text.faq}} </a>{{labels.body_text.label2}} <a href="" target="_blank" class="body-wraper-title">{{labels.body_text.knowledge_base}}</a></p>
      </div>
    </div>
    <div class="container contact-container">
      <div class="container-center">
        <div class="contact-wraper-item contact-wraper-form">
          <div class="contact-wraper-input">
            <p class="contact-header-text">{{labels.contact.label.form_text}}</p>
            <form class="contact-form" action="{{urls.form_contact.action}}" method="{{urls.form_contact.method}}" target="_blank">
              <input type="hidden" name="u" value="{{urls.form_contact.input_u_value}}">
              <input type="hidden" name="id" value="{{urls.form_contact.input_id_value}}">

              <input class="contact-form-input" type="text" name="{{urls.form_contact.element.title.name}}" placeholder="{{urls.form_contact.element.title.placeholder_text}}">
              <input class="contact-form-input" type="text" name="{{urls.form_contact.element.name.name}}" placeholder="{{urls.form_contact.element.name.placeholder_text}}">
              <input class="contact-form-input" type="email" name="{{urls.form_contact.element.email.name}}" required="true" placeholder="{{urls.form_contact.element.email.placeholder_text}}">
              <input class="contact-form-input" type="text" name="{{urls.form_contact.element.company.name}}" placeholder="{{urls.form_contact.element.company.placeholder_text}}">
              <textarea class="contact-form-input contact-form-area" name="{{urls.form_contact.element.message.name}}" placeholder="{{urls.form_contact.element.message.placeholder_text}}"></textarea>
              <input class="contact-form-submit" type="submit" name="submit" value="SEND">
            </form>
          </div>
        </div>
        <div class="contact-wraper-item contact-wraper-map">
          <div class="contact-wraper-map-box">
            <p class="contact-header-text">{{labels.contact.label.map_text}}</p>
            <div class="contact-wraper-map-title">
              <p class="company-address">
                <span class="company-name">{{labels.company_info.name}}</span><br/><br/>
                {{labels.company_info.address}}<br/><br/>
                {{labels.company_info.email}}<br/>
                {{labels.company_info.phone}}
              </p>
            </div>
            <div id="map" class="map-canvas"></div>
            <script src="https://maps.googleapis.com/maps/api/js?key={{assets.api_key}}"></script>
            <div class="addres-button-hidden"></div>
          </div>
        </div>
      </div>
    </div>
    {{> partials/footer.hbs}}
  {{/inline}}
{{/ layouts/default}}
