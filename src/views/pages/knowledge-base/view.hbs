{{#> layouts/default}}
  {{#*inline "content-body"}}
    <div class="container header-wrapper">
      <div class="container-center">
        {{> partials/header.hbs}}
      </div>
    </div>

    <div class="container body-wrapper">
      <div class="container-center">
        <h1 class="body-wrapper-title body-wrapper-title-size">{{labels.body_text.title}}</h1>
        <p class="container-center-label">{{labels.body_text.label1}} <a href="" target="_blank" class="body-wrapper-title">{{labels.body_text.faq}} </a>{{labels.body_text.label2}} <a href="" target="_blank" class="body-wrapper-title">{{labels.body_text.knowledge_base}}</a></p>
      </div>
    </div>

    <div class="container knowledge-base">
      <div class="container-center">
        <p class="knowledge-base-label">Knowledge base resources</p>
        <p class="knowledge-base-title">Find answers, guides, turorials and more to supercharge your content delivery.</p>
        <form method="" action="" class="knowledge-base-form" id="">
          <input class="knowledge-base-input" type="text" name="search" placeholder="Search the knowledge base">
        </form>
      </div>

    </div>

    <div class="container">
      <div class="feature container-center">
        {{#each urls.feature}}
          <div class="feature-info">
            <div class="feature-box-img-wrapper">
              <img class="feature-box-img" src={{this.img}} alt="{{this.alt}}">
            </div>
            <div class="feature-info-box">
              <p class="feature-info-box-label">{{this.label}}</p>
              <p class="feature-info-box-title">{{this.detail}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    {{> partials/footer.hbs}}
  {{/inline}}
{{/ layouts/default}}
