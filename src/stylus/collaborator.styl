@require './variable'

.container
  .trusted
    display: flex
    flex-direction: column
    padding-bottom: 40px

    .trusted-item
      flex-grow: 1
      display: flex
      justify-content: center
      align-items: center

      .trusted-title-p
        font-size: 30px
        padding-left: 10px
        padding-right: 10px
        font-weight: bold
        text-transform: uppercase

        @media screen and (max-width: $media-mobile-w)
          font-size: 23px

    .trusted-title
      height: 120px

    .trusted-box
      height: 100px
      display: flex
      flex-direction: row
      justify-content: center
      align-items: center

      .trusted-box-item
        flex-grow: 1
        display: flex
        flex-wrap: nowrap
        flex-direction: row
        justify-content: flex-start
        align-items: center

      .trusted-box-images
        overflow-x: hidden

        .trusted-image-wrapper
          display: flex
          justify-content: center
          align-items: center
          flex-grow: 1
          position: relative
          left: 0
          transition: left .2s linear

          .trusted-image
            flex-grow: 1
            padding: 0 10px 0 10px

            @media screen and (max-width: $media-tablet-w)
              width: 150px

            @media screen and (max-width: $media-mobile-w)
              width: 110px

      .trusted-button
        width: 100px
        height: 100px

        .trusted-button-item
          width: 50px
          height: 50px
          border: none
          background-size: cover
          outline: none

          &:hover
            transform: scale(1.2)

          &:active
            translateY(4px)
            background-color: $light-gray

        .btn_left
          background: url('~img/icon/previous.png') no-repeat center

        .btn_right
          background: url('~img/icon/next.png') no-repeat center
