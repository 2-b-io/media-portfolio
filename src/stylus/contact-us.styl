@require './variable'
@require './top-style'
@require './header'

.header-wrapper
  background-color: $light-gray

.body-wrapper
  min-height: 144.77px
  min-width: 300px
  display: flex
  background: url('~img/bg/contact.jpg') no-repeat center center
  background-size: cover
  height: 560px
  @media screen and (max-width: $media-tablet-w)
    height: 344.77px

  @media screen and (max-width: $media-mobile-w)
    height: 144.77px

  .container-center
    flex-grow: 1
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    flex-direction: column
    text-align: center
    padding-bottom: 15px

    .body-wrapper-title
      font-weight: bold
      text-transform: uppercase
      color: $color-blue

    .body-wrapper-title-size
      font-size: 40px
      text-shadow: 0 0 2px #000

    .container-center-label
      padding-left: 10px
      padding-right: 10px
      font-size: 24px
      color: white
      font-weight: bold
      text-shadow: 0 0 2px #000

      @media screen and (max-width: $media-mobile-w)
        font-size: 18px

.contact-container
  background-color: $light-gray
  padding: 25px 0 25px 0

  .container-center
    display: flex
    flex-direction: row

    @media screen and (max-width: $media-tablet-w)
      flex-direction: column

    .contact-wrapper-item
      padding: 10px
      display: flex

      .contact-wrapper-input
      .contact-wrapper-map-box
        .contact-header-text
          color: $color-blue
          font-weight: bold
          font-size: 22px
          padding: 20px 0 15px 0
          letter-spacing: 1px

    .contact-wrapper-form
      flex-grow: 2
      flex-basis: 100%

      .contact-wrapper-input
        min-width: 300px
        flex-grow: 1
        align-self: stretch
        display: flex
        flex-direction: column

        .contact-form
          flex-grow: 1
          display: flex
          flex-direction: column
          padding-right: 50px

          @media screen and (max-width: $media-tablet-w)
            flex-direction: column
            padding-right: 0

          &-input
            border-radius: 10px
            border: none
            min-width: 300px
            height: 35px
            padding-left: 20px
            padding-right: 20px
            margin-bottom: 10px
            outline: none

            &::placeholder
              font-style: italic
              color: #D4D4D4

            &:focus::placeholder
              color: $color-gray

          &-area
            flex: 1
            resize: none
            padding-top: 15px
            min-height: 100px
            outline: none

            @media screen and (max-width: $media-tablet-w)
              padding-top: 10.5px

          &-submit
            min-width: 90px
            width: 120px
            height: 40px
            margin-top: 10px
            font-size: 16px
            line-height: 25px
            text-transform: uppercase
            font-weight: bold
            color: white
            background-color: $color-blue
            border: none
            text-overflow: ellipsis
            border-radius: 2000px
            outline: none

    .contact-wrapper-map
      flex-grow: 1
      flex-basis: 50%

      &-box
        align-self: stretch

        @media screen and (max-width: $media-tablet-w)
          flex-grow: 1

        ^[-1]-title
          .company-address
            line-height: 20px
            padding-bottom: 20px

            .company-name
              font-weight: bold

        .map-canvas
        #map-canvas
          min-width: 300px
          height: 200px

        .addres-button-hidden
          margin-top: 20px
          width: 90px
          height: 25px
          visibility: hidden

          @media screen and (max-width: $media-tablet-w)
            display: none

@require './footer'
