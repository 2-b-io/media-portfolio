@require './space-mono'

meyer-reset()
box-sizing-reset()
normalize()

html, body
  font-family: Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif
  overflow-x: hidden
  height: 100%
  min-width: 200px

a
  text-decoration: none
  font-weight: bold

.container
  height: auto
  background: transparent

  .container-center
    border: 1px red solid
    max-width: 1150px
    margin: auto

    .header-top
      height: 120px
      display: flex

      .header-logo
        padding-top: 30px
        padding-left: 10px
        width: 150px
        height: 150px
        float: left

        .logo
          width: 130px
          height: 100px

      .header-menu
        max-width: 1000px
        height: 150px
        margin: auto
        display: flex
        // float: left

        .menu
          padding-top:30px
          margin-left: 20px
          display: flex
          margin: auto

          .top-menu
            display: inline

            .menu-item
              padding-left:80px
              float: left

              .menu-item-a
                height: 30px
                color: black
                display: block

                &:hover
                  color: #0066b3
                  height: 30px
                  border-bottom: 1px solid blue

              @media screen and (max-width: 1200px)
                padding-right:40px

              @media screen and (max-width: 840px)
                padding-right:20px

    .header-bottom
      padding: 70px 0 0 10px
      height: 60%

      .header-text, .lean-more
        color: #fff
        font-weight: bold
        text-transform: uppercase

      .header-text
        padding-top 10px
        margin-top: 20px
        letter-spacing: 1px
        text-shadow: 0px 0px 2px black
        font-size: 60px
        line-height: 80px
        text-overflow: ellipsis

        margin: left

        @media screen and (max-width: 1200px)
          font-size: 40px
          line-height: 50px

        @media screen and (max-width: 600px)
          font-size: 25px
          line-height: 35px

      .lean-more
        margin-top: 20px
        background: #00b4f4
        border-radius: 2000px
        font-size: 24px
        text-align: center
        line-height: 50px
        width: 250px
        height: 50px
        display: block

        &:hover
          background: #4ba6dd

.container-full-screen
  height: 100%
  background: url('~img/bg/bg_home_header.png') no-repeat center center
  background-size: cover

  .container-center
    height: 100%

.container
  .feature
    text-align: center
    display: flex
    flex-wrap: wrap
    flex-grow: 1
    align-items: center
    justify-content: center

    .container-center-box
      display: flex
      flex-wrap: wrap
      flex-grow: 1

      .feature-info
        height: 360px
        flex-grow: 1
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center

        .feature-box-img-wraper
          width: 260px
          height: 180px
          display: flex

          .feature-box-img
            margin: auto
            height: 100px
            width: 100px

        .feature-info-box
          width: 260px
          height: 180px

          .feature-info-box-title
            font-weight: bold
            height: 20px

          .feature-info-box-label
            height: 100px
            font-size: 13px
            padding-left: 5px
            padding-right: 5px

    .what-new
      flex-grow: 1
      flex-wrap: wrap

    .what-new-title
      margin: auto
      font-weight: bold
      text-transform: uppercase
      font-size: 25px
      height: 120px
      line-height: 120px

      @media screen and (max-width: 420px)
        font-size: 19px
        height: 80px
        line-height: 80px

    .what-new-image-wraper
      display: flex
      flex-wrap: wrap
      flex-grow: 1

      .what-new-image-box
        // height: 220px
        flex-grow: 1
        padding-bottom: 40px

        .what-new-image
          width: 300px
          padding: 0px 50px 0 50px

        .what-new-image-title
          padding-top: 20px
          height: 80px
          line-height: 80px
          font-weight: bold

      .trusted-wraper
        height: 100px
        display: inline


.maps
  background: #EEEEEE
  padding-bottom: 40px
  display: block

  .container-center
    text-align: center

    .maps-label
      display: flex
      height: 100px

      .maps-p
        font-size: 19px
        line-height: 25px
        margin: auto

    .maps-background-wraper
      background: url('~img/bg/bg_home_maps.jpg') no-repeat center
      background-size: contain
      margin: auto
      // max-width: 1200px
      height: 50vh

    .maps-footer
      margin: auto
      // max-width: 1000px
      height: 100px
      display: flex

      .maps-footer-text
        margin: auto
        width: 250px
        height: 100px
        display: flex

        .maps-footer-p
          margin: auto
          height: 70px

          .maps-span-value
            font-size: 25px
            font-weight: bold

          .maps-span-small
            margin-top: 10px
            font-size: 17px
            font-weight: normal

.subscribe
  background: #EEEEEE
  height: auto
  display: flex
  text-align: center

  .subscribe-wraper
    margin: auto
    display: flex
    width: 1300px
    height: 150px
    background: url('~img/bg/bg_home_subscribe.png') no-repeat right 100px center
    background-size: 180px 100px

    .subscribe-text
      margin: auto
      display: inline-block

      p
        font-size: 40px
        color: #AED2F2
        display: inline
        padding-right: 40px
        font-style: italic
        letter-spacing: 1.5px

      input
        border: 1px solid #999
        border-radius: 5px
        font-style: italic
        font-size: 16px
        background: #fff
        cursor: pointer

      input[type=email]
        height: 20px
        padding: 14px 20px

      input[type=submit]
        height: 27px
        color: #999

        &:hover
          color: #0066b3

        // box-shadow: 1px 1px 1px 1px #999

.footer
  background: #000
  height: auto
  // display: flex

  .container-footer-center
    padding-top: 30px
    padding-bottom: 30px
    display: flex
    margin: auto

    .footer-wraper
      text-align: center
      margin: auto
      max-width: 1300px
      display: flex
      flex-wrap: wrap
      padding-left: 10px
      padding-right: 10px

      .bottom-container
        display: flex
        color: #fff
        flex-wrap: wrap
        align-items: center
        flex-grow: 1
        justify-content: center
        padding-top: 20px
        padding-bottom: 20px


      .bottom-logo
        width: 150px

        .bottom-logo-img
          width: 130px
          height: 100px

      .bottom-menu-wraper-box
        .bottom-menu-box
          height: 30px

        .bottom-menu
          display: flex
          flex-wrap: wrap
          align-items: center
          flex-grow: 1
          justify-content: center


          .bottom-menu-item
            display: flex
            flex-wrap: wrap
            align-items: center
            flex-grow: 1
            justify-content: center
            padding-left: 10px
            padding-right: 10px

            .bottom-menu-item-a
              // font-size: 18px
              height: 30px
              line-height: 30px
              color: #fff

              &:hover
                color: #0066b3

      .bottom-icon
        display: flex
        flex-wrap: wrap
        align-items: center
        flex-grow: 1
        justify-content: center

        .bottom-icon-box
          height: 20px
          height: 30px
          line-height: 30px

          img
            padding-left: 20px
            padding-right: 20px

.footer-license
  display: inline
  text-align: center

  .footer-license-p
    width: 50%
    height: 50px
    float: left
    line-height: 50px
    font-size: 15px
    color: #fff
    background-color: #0064B2
