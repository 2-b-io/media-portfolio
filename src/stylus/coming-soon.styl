@require './space-mono'

meyer-reset()
box-sizing-reset()
normalize()

html, body
  font-family: 'Space Mono'

.Header
  height: 300px
  width: 100
  display: flex
  .logo
    margin: auto
    text-align: center
    img
      width: 200px
    h2
      padding-top: 10px
      color: #396
      font-weight: 100
      font-size: 40px

.content_clock
  text-align: center
  background: #00ECB9
  font-family: sans-serif
  font-weight: 100
  height: 300px
  display: flex
  #clockdiv
    font-family: sans-serif
    color: #fff
    display: inline-block
    font-weight: 100
    text-align: center
    font-size: 30px
    margin: auto
    div
      padding: 10px
      border-radius: 3px
      background-color: #00BF96
      display: inline-block
      span
        padding: 15px
        border-radius: 3px
        background-color: #00816A
        display: inline-block
    .smalltext
      padding-top: 5px
      font-size: 16px

.container
  width: 100%
  padding-bottom: 100px
  #subscribe
    text-align: center
    padding-top: 50px
    input
      background-color: #fff
      color: #7a7a7a
      vertical-align: middle
      width: 350px
      border: 1px solid #888
      padding: 10px
      font-size: 14px
      &:hover
        text: null
    input[type="submit"]
      margin-left: -10px
      width: auto
      padding: 10px 25px
      cursor: pointer
      font-weight: bold
      color: #888
      box-sizing: border-box
      &:hover
        background:#1e7ccd
        color:#fff
        border:1px solid #1e7ccd
    p
      text-align: center
    h3
      font-size: 30px
      margin: 0.2em 0
      text-align: center
      color: #888
      padding: 0 0 29px
