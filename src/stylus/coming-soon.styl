// @require './space-mono'

meyer-reset()
box-sizing-reset()
normalize()

$white = #FFFFFF
$blue = #5381E4

html, body
  font-family: 'Space Mono', Consolas, monaco, monospace
  min-height: 100%
  height: 100%

body
  background: $blue
  min-height: 100%
  height: 100%

.wrapper
  display: flex
  flex-direction: column
  min-height: 100%

  .header
    background: url('~img/bg/bg_coming.png') repeat
    padding: 10px 30px
    flex-grow: 1
    display: flex

    .logo
      margin: auto
      text-align: center

      .logo-img
        width: 180px
        padding-top: 10px

      .logo-text
        padding-top: 50px
        font-weight: 100
        font-size: 40px
        text-transform: uppercase

  .content-clock
    text-align: center
    background: $blue
    flex-grow: 1
    display: flex

    .clock
      color: $white
      display: inline-block
      text-align: center
      font-size: 30px
      margin: auto
      padding: 40px 0 40px 0

      .container
        display: inline-block

      .time-box
        display: inline-block
        width: 160px

        .time
          padding: 15px
          display: inline-block
          font-size: 60px

      .small-text
        padding: 5px 0 0 0
        font-size: 16px
