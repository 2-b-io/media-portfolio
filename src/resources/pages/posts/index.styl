@require '~style/index'
@require '../header'
@require '../footer'

.post-list
  border-top: 2px solid $color_primary
  padding-top: 96px
  padding-bottom: 16px

  .container
    display: grid
    grid-gap: 16px
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr))

    .post
      // border: 1px solid $color_background
      padding: 16px

      .post-title
        margin-bottom: 16px
        color: $color_primary

        a
          text-decoration: none

.post-header
  padding-top: 64px
  padding-bottom: 64px
  text-align: center
  position: relative
  overflow: hidden

  .container
    position: relative
    z-index: 1

    h1
      color: $color_white

  .background, .overlay
    position: absolute
    z-index: 0
    top: 0
    left: 0
    right: 0
    bottom: 0
    overflow: hidden

    img
      min-width: 100%

  .background
    filter: blur(2px)

  .overlay
    background: alpha($color_black, 0.3)

.cms-post-content
  padding-top: 16px
  padding-bottom: 32px

  img
    max-width: 100%

  p
    padding-top: 8px
    padding-bottom: 8px

  pre
    padding: 8px
    background: $color_background
    overflow: auto
    margin-top: 16px
    margin-bottom: 16px

  code
    background: $color_background
    padding-left: 4px
    padding-right: 4px
    white-space: nowrap
    display: inline-block

  h1, h2, h3, h4, h5
    margin-top: 32px
    margin-bottom: 16px
    color: $color_primary

  h1
    font-size: $font_size_sub_heading
    line-height: $line_height_sub_heading

  h2
    font-size: $font_size_large
    line-height: $line_height_large

  ul
    padding-top: 8px
    padding-bottom: 8px

    & > li
      list-style: disc
      margin-left: 32px

  ol
    padding-top: 8px
    padding-bottom: 8px

    & > li
      list-style: decimal
      margin-left: 32px

  a
    color: $color_secondary

  blockquote
    padding-top: 8px
    padding-bottom: 8px
    padding-left: 16px
    margin-top: 16px
    margin-bottom: 16px
    border-left: 2px solid $color_background

  .kg-card
    border: 1px solid $color_background
    padding: 8px
    margin-top: 16px
    margin-bottom: 16px

    figcaption
      padding-top: 16px
