@require '~style/index'
@require '../header'
@require '../footer'

.post-header
  border-top: 2px solid $color_primary
  padding-top: 96px
  padding-bottom: 16px

.cms-post-content
  padding-bottom: 32px

  img
    max-width: 100%

  p
    padding-top: 8px
    padding-bottom: 8px

  pre
    padding: 8px
    background: $color_background
    overflow: auto
    margin-top: 16px
    margin-bottom: 16px

  code
    background: $color_background
    padding-left: 4px
    padding-right: 4px
    white-space: nowrap
    display: inline-block

  h1, h2, h3, h4, h5
    margin-top: 32px
    margin-bottom: 16px
    color: $color_primary

  h1
    font-size: $font_size_sub_heading
    line-height: $line_height_sub_heading

  h2
    font-size: $font_size_large
    line-height: $line_height_large

  ul
    padding-top: 8px
    padding-bottom: 8px

    & > li
      list-style: disc
      margin-left: 32px

  a
    color: $color_secondary

  blockquote
    padding-top: 8px
    padding-bottom: 8px
    padding-left: 16px
    margin-top: 16px
    margin-bottom: 16px
    border-left: 2px solid $color_background

  .kg-card
    border: 1px solid $color_background
    padding: 8px
    margin-top: 16px
    margin-bottom: 16px

    figcaption
      padding-top: 16px
