@require '~style/global'

.header
  background: $color_white
  color: $color_primary
  padding: 16px 0
  text-align: right

  &.fixed
    z-index: 2
    position: fixed
    top: 0
    left: 0
    right: 0

    .scroll-indicator
      position: absolute
      bottom: 0
      height: 2px
      background: #07f
      transform: translateY(2px)
      width: 0
      transition: width .2s

  .container
    display: grid
    grid-template-columns: min-content min-content 1fr
    grid-gap: 16px
    align-items: center

    .home-link
      display: flex
      text-decoration: none
      text-transform: uppercase

    .logo
      size: 24px
      background: $color_primary

      &:after
        display: block
        content: ''
        background: $color_white
        size: 16px
        margin: 4px

    .top-nav
      display: flex
      margin-left: auto

      li
        display: inline-block
        line-height: 40px
        text-transform: uppercase
        font-size: $font_size_small
        line-height: $line_height_small

        a
          display: inline-block
          padding: 0 8px

          &.primary
            background: $color_primary
            color: $color_white
            text-decoration: none
