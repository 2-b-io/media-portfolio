.section-scene
  position: relative
  background: $color_white

  .top-line
    position: absolute
    top: 0
    left: 0
    height: 2px
    width: 100%
    background: $color_primary
    z-index: 0

  .bottom-line
    position: absolute
    bottom: 0
    left: 0
    height: 2px
    width: 100%
    background: $color_primary
    z-index: 0

  .scene
    position: relative
    overflow: hidden
    z-index: 1

    &.origin
      height: 128px

    &.target
      height: 256px

    .layer
      position: relative
      size: 100%

      & > *
        display: none
        position: absolute
        top: 0
        left: 0
        background: $color_white
        transition: opacity .2s
        border: 2px solid $color_primary
