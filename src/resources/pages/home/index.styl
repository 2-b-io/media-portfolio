@require '~style/global'
@require './scene'

.show-off
   height: auto
   display: flex
   justify-content: center

  .circle-container
    z-index: 0
    margin: 64px 0
    display: grid
    grid-template-columns: repeat(2, 1fr)
    grid-column-gap: 32px
    grid-row-gap: 64px
    justify-content: center
    align-items: center

    @media (min-width: 768px)
      grid-template-columns: repeat(4, 1fr)

    .circle
      min-width: 0
      min-height: 0
      size: 128px
      border-radius: 50%
      background: $color_primary
      display: flex
      justify-content: center
      align-items: center

    &.content
      z-index: 2
      position: absolute
      top: 50%
      left: 50%
      transform: translate3d(-50%, -50%, 0)
      margin: 0

      .circle
        background: transparent

        .step
          size: 124px
          background: $color_white
          border-radius: 50%
          text-transform: uppercase
          text-align: center
          display: flex
          flex-direction: column
          justify-content: center
          align-items: center
          font-family: 'Roboto Mono', monospace

          .number
            font-size: $font_size_heading
            line-height: $line_height_heading
            color: $color_primary

          .text
            font-size: $font_size_small
            line-height: $line_height_small
            color: $color_secondary

.section
  padding-top: 48px
  padding-bottom: 32px
  text-align: center

  &.intro
    font-size: $font_size_large
    line-height: $line_height_large

    .conclusion
      color: $color_primary
      font-size: $font_size_heading
      line-height: $line_height_heading

  &.pricing
    background: $color_primary
    color: $color_white

    .purpose
      font-size: $font_size_heading
      line-height: $line_height_heading
      text-transform: uppercase

    .price
      display: grid
      width: min-content
      margin: 0 auto 96px auto
      grid-template-columns: 48px min-content 48px
      align-items: end

      .value
        display: inline-block
        font-size: 80px
        line-height: 80px
        height: 80px
        position: relative
        font-family: 'Roboto Mono'

      .prefix, .postfix
        font-size: $font_size_small
        line-height: $line_height_small

      .prefix
        text-align: right

      .postfix
        text-align: left

    .feature-list
      display: grid
      grid-template-columns: 1fr
      grid-column-gap: 32px
      grid-row-gap: 64px
      grid-auto-rows: 1fr
      width: min-content
      margin: 32px auto

      @media (min-width: 768px)
        grid-template-columns: repeat(2, 1fr)

      .feature
        min-width: 0
        min-height: 0
        width: 288px

        .feature-illu
          size: 96px
          margin: 0 auto
          display: flex
          justify-content: center
          align-items: center
          margin-bottom: 32px

          img
            max-width: 100%
            max-height: 100%

        .feature-name
          text-transform: uppercase
          font-family: 'Roboto Mono', monospace
          font-size: $font_size_large
          line-height: $line_height_large

        .feature-description
          font-size: $font_size_small
          line-height: $line_height_small

  &.footer
    background: $color_black
    color: $color_white
    font-size: $font_size_small
    line-height: $line_height_small
    padding-top: 8px
    padding-bottom: 8px

  &.promotion
    background: $color_white
    color: $color_black
    text-align: center

    .offer
      display: inline-block
      padding: 8px 32px
      background: $color_primary
      color: $color_white
      text-decoration: none
      text-transform: uppercase
      font-size: $font_size_large
      line-height: $line_height_large

    .note
      display: block
      font-size: $font_size_small
      line-height: $line_height_small
      color: $color_secondary

.container
  margin: 0 auto
  max-width: 960px
  padding-left: 16px
  padding-right: 16px

.header
  background: $color_white
  color: $color_primary
  padding: 16px 0
  text-align: right

  .container
    display: grid
    grid-template-columns: min-content 1fr
    grid-gap: 8px
    align-items: center

    .logo
      size: 24px
      background: $color_primary

      &:after
        display: block
        content: ''
        background: $color_white
        size: 16px
        margin: 4px

    .top-nav
      display: inline-block

      li
        display: inline-block
        line-height: 40px
        text-transform: uppercase
        font-size: $font_size_small
        line-height: $line_height_small

        &:not(:last-child)
          padding-right: 16px

        a
          text-decoration: none
