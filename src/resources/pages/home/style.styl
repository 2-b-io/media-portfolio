@require '~style/global'

.section-scene
  position: relative
  background: $color_white

  .top-line
    position: absolute
    top: 0
    left: 0
    height: 2px
    width: 100%
    background: $color_primary
    z-index: 0

  .bottom-line
    position: absolute
    bottom: 0
    left: 0
    height: 2px
    width: 100%
    background: $color_primary
    z-index: 0

  .scene
    position: relative
    height: 150px
    overflow: hidden
    z-index: 1

    .layer
      position: relative
      size: 100%

      & > *
        position: absolute
        top: 0
        left: 0
        background: $color_white
        transition: opacity .2s
        border: 2px solid $color_primary


  .intro
    position: absolute
    top: 40px
    left: 50%
    transform: translateX(-50%)
    background: rgba(17, 17, 17, 0.7)
    min-width: 288px
    height: 128px
    text-align: center
    color: $color_white

.section-promotion
  background: $color_white
  color: $color_black
  padding-top: 48px
  padding-bottom: 48px
  text-align: center

  h1
    font-size: 42px
    line-height: 64px
    color: $color_primary
    font-family: 'Open Sans', sans-serif

  h2
    font-size 22px
    line-height: 32px
    color: $color_secondary
    font-family: 'Open Sans', sans-serif

  .offer
    display: inline-block
    padding: 16px 32px
    background: $color_primary
    color: $color_white
    text-decoration: none
    text-transform: uppercase
    font-size: 16px

    &:hover
      background: monochrome($color_primary)[0]

    &:active
      background: monochrome($color_primary)[1]

  .note
    display: block
    font-size: 12px
    color: $color_secondary

.container
  margin: 0 auto
  max-width: 960px
  padding-left: 16px
  padding-right: 16px

.announcement
  position: relative
  z-index: 1
  line-height: 24px
  background: $color_black
  color: $color_white
  font-size: 12px
  padding-left: 8px
  padding-right: 8px
  text-align: center

.header
  background: $color_white
  color: $color_primary
  padding: 16px 0
  text-align: right

  .top-nav
    display: inline-block

    li
      display: inline-block
      line-height: 40px
      text-transform: uppercase

      &:not(:last-child)
        padding-right: 16px

      a
        text-decoration: none

.break-after
  &:after
    display: block
    content: ''
    height: 32px

.double-break-after
  &:after
    display: block
    content: ''
    height: 64px
