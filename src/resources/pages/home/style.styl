@require '~style/global'

.target-scene
  position: relative
  height: 600px
  background: #ffffff
  overflow: hidden

  .layer
    position: relative
    size: 100%

    .block
      position: absolute
      background: #111111
      transition: opacity .2s

.section-promotion
  background: #111111
  color: #ffffff
  padding: 16px

.container
  margin: 0 auto
  max-width: 960px

.announcement
  position: relative
  z-index: 1
  line-height: 24px
  background: #111111
  color: #ffffff
  font-size: 12px
  padding-left: 16px
  padding-right: 16px

.header
  background: #111111
  color: #ffffff
  height: 40px
