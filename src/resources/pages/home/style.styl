@require '~style/global'
@require './scene'

.section-promotion
  background: $color_white
  color: $color_black
  padding-top: 48px
  padding-bottom: 48px
  text-align: center

  h1
    font-size: 42px
    line-height: 64px
    color: $color_primary
    font-family: 'Open Sans', sans-serif

  h2
    font-size 22px
    line-height: 32px
    color: $color_secondary
    font-family: 'Open Sans', sans-serif

  .offer
    display: inline-block
    padding: 16px 32px
    background: $color_primary
    color: $color_white
    text-decoration: none
    text-transform: uppercase
    font-size: 16px

    &:hover
      background: monochrome($color_primary)[0]

    &:active
      background: monochrome($color_primary)[1]

  .note
    display: block
    font-size: 12px
    color: $color_secondary

.container
  margin: 0 auto
  max-width: 960px
  padding-left: 16px
  padding-right: 16px

.announcement
  position: relative
  z-index: 1
  line-height: 24px
  background: $color_black
  color: $color_white
  font-size: 12px
  padding-left: 8px
  padding-right: 8px
  text-align: center

.header
  background: $color_white
  color: $color_primary
  padding: 16px 0
  text-align: right

  .container
    display: grid
    grid-template-columns: min-content 1fr
    grid-gap: 8px

    .logo
      size: 40px
      background: $color_primary

      &:after
        display: block
        content: ''
        background: $color_white
        size: 24px
        margin: 8px

    .top-nav
      display: inline-block

      li
        display: inline-block
        line-height: 40px
        text-transform: uppercase
        font-size: 12px

        &:not(:last-child)
          padding-right: 16px

        a
          text-decoration: none

.break-after
  &:after
    display: block
    content: ''
    height: 32px

.double-break-after
  &:after
    display: block
    content: ''
    height: 64px
