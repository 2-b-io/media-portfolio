@import '~typeface-roboto-mono/index.css'
@import '~typeface-space-mono/index.css'

meyer-reset()
box-sizing-reset()

html
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  /* Prevent font scaling in landscape while allowing user zoom */
  -webkit-text-size-adjust: 100%

  font-family: 'Space Mono', 'Roboto Mono', 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace
  font-size: 14px
  line-height: 24px

  * {
    font-family: inherit
    font-size: inherit
    line-height: inherit
  }

html, body
  height: 100%
  overflow-x: hidden;
  overflow-y: auto;
